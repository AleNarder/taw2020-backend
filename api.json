         },
         "RequestError": {
            "description": "Richiesta non lecita",
            "content": {
               "application/json": {
                  "schema": {
                     "title": "Error",
                     "type": "object",
                     "properties": {
                        "status": {
                           "type": "string",
                           "description": "Esito della chiamata"
                        },
